# MongoDB Configuration
# For local MongoDB
MONGODB_URI=mongodb://localhost:27017/hono_backend

# For Docker MongoDB with authentication
# MONGODB_URI=mongodb://admin:admin123@localhost:27017/hono_backend?authSource=admin

# For MongoDB Atlas (replace with your connection string)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hono_backend?retryWrites=true&w=majority

DATABASE_NAME=hono_backend

# Server Configuration
PORT=3000
NODE_ENV=development

# API Configuration
API_PREFIX=/api/v1

# Firebase Configuration
# Option 1: Sử dụng Service Account Key File
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_SERVICE_ACCOUNT_PATH=./path/to/serviceAccountKey.json

# Option 2: Sử dụng Environment Variables (thay thế cho service account file)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
